{
  "name": "digital-wallet-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "generate": "yarn prisma generate",
    "deploy": "yarn prisma migrate deploy",
    "dev": "ts-node-dev --exit-child --transpile-only --ignore-watch node_modules src/server.ts",
    "build": "tsc",
    "postbuild": "prisma migrate deploy",
    "vercel-build": "prisma generate && yarn migrate:deploy && yarn build",
    "migrate:deploy": "DATABASE_URL=\"$MIGRATE_DATABASE_URL\" prisma migrate deploy",
    "start": "node ./dist/app.js"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "prisma": "^4.6.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-yup-middleware": "^1.2.3",
    "jsonwebtoken": "^8.5.1",
    "yup": "^0.32.11"
  }
}